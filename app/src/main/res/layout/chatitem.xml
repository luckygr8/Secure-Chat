<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sender_layout"
            android:layout_alignParentStart="true"
            android:background="@drawable/backround_bg"
            android:gravity="right"
            android:layout_width="wrap_content" android:padding="10dp"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/sender_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:id="@+id/sender_message"
                android:fontFamily="@font/indiaflower"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/sender_time"
                android:textColor="@color/grey"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/your_layout"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:background="@drawable/backround_bg"
            android:layout_width="wrap_content" android:padding="10dp"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:fontFamily="@font/indiaflower"
                android:textColor="@color/black"
                android:id="@+id/your_message"
                />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:id="@+id/your_time"
                android:textColor="@color/grey"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>